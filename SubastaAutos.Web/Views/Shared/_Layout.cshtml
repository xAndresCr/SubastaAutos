<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Subastas</title>
    <script type="importmap"></script>
    <!--Preconección (mejorar carga CDN)-->
    <link rel="preconnect" href="https://cdnjs.cloudfare.com" crossorigin />
    <link rel="preconnect" href="https://cdn.jsdelivr.net" crossorigin />
    <!--Boostrap 5.3.8-->
    <link rel="stylesheet" href="~/lib/bootstrap/css/bootstrap.min.css" />
    <!--Boostrap Icons-->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.13.1/font/bootstrap-icons.min.css">
    <!--SweetAlert 2-->
    <link rel="stylesheet" href="~/lib/sweetalert2/dist/sweetalert2.min.css" />
    <!--Estilos propios-->
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/SubastaAutos.Web.styles.css" asp-append-version="true" />
    <!-- Multi - select (depende de Bootstrap + jQuery) -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-multiselect/1.1.2/css/bootstrap-multiselect.css" crossorigin="anonymous" referrerpolicy="no - referrer" />

</head>
<body>
    <header class="sticky-top">
        @await Html.PartialAsync("_Menu")
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="mt-auto border-top">
        <div class="container py-3 small text-muted d-flex flex-column flex-md-row gap-2 justify-content-between align-items-md-center">
            <div>
                &copy; @DateTime.Now.Year - Subasta
            </div>
            <div>
                <a class="link-secondary text-decoration-none" asp-area="" asp-controller="Home" asp-action="Privacy">
                    Privacidad
                </a>
            </div>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
