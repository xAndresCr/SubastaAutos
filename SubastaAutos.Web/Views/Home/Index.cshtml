@{
    ViewData["Title"] = "Inicio";
}
<style>
    .carousel-fullwidth {
        position: relative;
        left: 50%;
        right: 50%;
        margin-left: -50vw;
        margin-right: -50vw;
        width: 100vw;
        overflow: hidden;
        z-index: 0;
    }

        .carousel-fullwidth .carousel-item img {
            width: 100%;
            height: 90vh; 
            object-fit: cover;
            display: block;
        }
</style>


<div class="carousel-imagenes carousel-fullwidth">
    <div id="carouselExample" class="carousel slide">
        <div class="carousel-inner">
            <div class="carousel-item active">
                <img src="/images/fondo 3.jpg" class="d-block w-100" alt="...">
            </div>
            <div class="carousel-item">
                <img src="/images/fondo 2.jpg" class="d-block w-100" alt="...">
            </div>
            <div class="carousel-item">
                <img src="/images/fondo 1.jpg" class="d-block w-100" alt="...">
            </div>
        </div>
        <button class="carousel-control-prev" type="button" data-bs-target="#carouselExample" data-bs-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Previous</span>
        </button>
        <button class="carousel-control-next" type="button" data-bs-target="#carouselExample" data-bs-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Next</span>
        </button>
    </div>
    </div>

<section class="py-5 text-center bg-light rounded-3 mb-4 shadow-sm">
    <div class="container">
        <h1 class="display-5 fw-bold mb-3">
            Bienvenido a tu página de subastas 
        </h1>

        <p class="lead text-muted mb-4">
            Explora vehículos y motocicletas, tu nuevo vehículo te está esperando
        </p>
    </div>
</section>

<section class="container mb-5">
    <h2 class="h4 fw-bold mb-4 text-center">Accesos rápidos</h2>

    <div class="row g-4">

        <!-- Vehículos -->
        <div class="col-12 col-md-4">
            <a asp-controller="Usuario" asp-action="Index" class="text-decoration-none text-dark">
                <div class="card h-100 shadow-sm border-0 hover-card">
                    <div class="card-body text-center py-4">
                        <i class="bi bi-people fs-1 mb-3 text-primary"></i>
                        <h5 class="fw-semibold">Usuarios</h5>
                        <p class="text-muted small">Gestiona y visualiza tus usuarios registrados.</p>
                    </div>
                </div>
            </a>
        </div>

        <!-- Objetos -->
        <div class="col-12 col-md-4">
            <a asp-controller="Auto" asp-action="Index" class="text-decoration-none text-dark">
                <div class="card h-100 shadow-sm border-0 hover-card">
                    <div class="card-body text-center py-4">
                        <i class="bi bi-car-front-fill fs-1 mb-3 text-success"></i>
                        <h5 class="fw-semibold">Vehículos</h5>
                        <p class="text-muted small">Consulta el catálogo de vehículos disponible.</p>
                    </div>
                </div>
            </a>
        </div>

        <!-- Reportes -->
        <div class="col-12 col-md-4">
            <a asp-controller="Reporte" asp-action="GraficoVentas" class="text-decoration-none text-dark">
                <div class="card h-100 shadow-sm border-0 hover-card">
                    <div class="card-body text-center py-4">
                        <i class="bi bi-bar-chart-line fs-1 mb-3 text-danger"></i>
                        <h5 class="fw-semibold">Reportes</h5>
                        <p class="text-muted small">Visualiza estadísticas y reportes de ventas.</p>
                    </div>
                </div>
            </a>
        </div>

    </div>
</section>
