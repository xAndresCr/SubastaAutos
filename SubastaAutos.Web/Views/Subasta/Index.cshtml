@model IEnumerable<SubastaAutos.Application.DTOs.SubastaDTO>

@{
    ViewData["Title"] = "Subastas Activas";
    var total = Model?.Count() ?? 0;
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <div>
        <h1 class="h3 mb-1">Subastas Activas</h1>
        <p class="text-muted mb-0">
            Total: <strong>@total</strong>
        </p>
    </div>
</div>

@if (Model == null || !Model.Any())
{
    <div class="alert alert-info">
        No hay subastas activas en este momento.
    </div>
}
else
{
    <div class="row row-cols-1 row-cols-sm-2 row-cols-lg-3 row-cols-xl-4 g-4">
        @foreach (var item in Model)
        {
            <div class="col">
                <article class="card h-100 shadow-sm border-0">

                    @* ── Imagen del auto ──────────────────────────────── *@
                    <div class="overflow-hidden bg-body-tertiary rounded-top"
                         style="height:200px;">
                        @if (!string.IsNullOrWhiteSpace(item.ImagenPrincipalAuto))
                        {
                            <img class="w-100 h-100 object-fit-cover"
                                 src="@item.ImagenPrincipalAuto"
                                 alt="@item.NombreAuto"
                                 loading="lazy" />
                        }
                        else
                        {
                            <div class="d-flex flex-column justify-content-center
                                        align-items-center h-100 text-muted">
                                <i class="bi bi-car-front fs-1"></i>
                                <span class="small">Sin imagen</span>
                            </div>
                        }
                    </div>

                    <div class="card-body">
                        @* ── Nombre del auto ──────────────────────────── *@
                        <h2 class="h6 fw-semibold mb-2 text-truncate"
                            title="@item.NombreAuto">
                            @item.NombreAuto
                        </h2>

                        @* ── Precio base ──────────────────────────────── *@
                        <p class="fw-bold text-success mb-2">
                            @item.PrecioBase.ToString("C", new System.Globalization.CultureInfo("es-CR"))
                        </p>

                        <div class="d-flex flex-wrap gap-1 mb-2">
                            @* ── Estado ───────────────────────────────── *@
                            <span class="badge text-bg-success">
                                <i class="bi bi-circle-fill me-1" style="font-size:.45rem;"></i>
                                @item.EstadoSubasta
                            </span>

                            @* ── Cantidad de pujas ────────────────────── *@
                            <span class="badge text-bg-warning">
                                <i class="bi bi-hammer me-1"></i>@item.CantidadPujas pujas
                            </span>
                        </div>

                        @* ── Fechas ───────────────────────────────────── *@
                        <small class="text-muted d-block">
                            <i class="bi bi-calendar-event me-1"></i>
                            Cierra: @item.FechaCierre.ToString("dd/MM/yyyy HH:mm")
                        </small>
                    </div>

                    <div class="card-footer bg-body border-0 pb-3">
                        <div class="d-grid">
                            <a asp-action="Details" asp-route-id="@item.IdSubasta"
                               class="btn btn-primary btn-sm">
                                <i class="bi bi-eye me-1"></i>Ver detalle
                            </a>
                        </div>
                    </div>

                </article>
            </div>
        }
    </div>
}

@section Scripts {
    <style>
        .card:hover { transform: translateY(-3px); transition: transform .18s ease; }
    </style>
}
