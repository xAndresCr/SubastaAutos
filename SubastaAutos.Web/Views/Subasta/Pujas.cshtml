@model IEnumerable<SubastaAutos.Application.DTOs.PujaDTO>

@{
    ViewData["Title"] = $"Pujas de Subasta #{ViewBag.IdSubasta}";
    var idSubasta = (int)ViewBag.IdSubasta;
    var total = Model?.Count() ?? 0;
}

<div class="mb-3">
    <a asp-action="Details" asp-route-id="@idSubasta"
       class="btn btn-outline-secondary btn-sm">
        <i class="bi bi-arrow-left me-1"></i>Volver al detalle
    </a>
</div>

<div class="card shadow-sm border-0">
    <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
        <h1 class="h5 mb-0">
            <i class="bi bi-hammer me-2"></i>Historial de Pujas — Subasta #@idSubasta
        </h1>
        <span class="badge text-bg-light text-dark">@total pujas</span>
    </div>

    <div class="card-body p-0">
        @if (Model == null || !Model.Any())
        {
            <div class="alert alert-info m-3">
                Esta subasta aún no tiene pujas registradas.
            </div>
        }
        else
        {
            <div class="table-responsive">
                <table class="table table-striped table-hover mb-0">
                    <thead class="table-dark">
                        <tr>
                            <th>#</th>
                            <th>@Html.DisplayNameFor(m => m.NombrePostor)</th>
                            <th>@Html.DisplayNameFor(m => m.Monto)</th>
                            <th>@Html.DisplayNameFor(m => m.FechaHora)</th>
                        </tr>
                    </thead>
                    <tbody>
                        @{
                            var posicion = 1;
                        }
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @if (posicion == 1)
                                    {
                                        @* La primera fila es la puja más alta (orden descendente) *@
                                        <span class="badge text-bg-success">@posicion</span>
                                    }
                                    else
                                    {
                                        @posicion
                                    }
                                </td>
                                <td>@item.NombrePostor</td>
                                <td class="fw-semibold">
                                    @item.Monto.ToString("C", new System.Globalization.CultureInfo("es-CR"))
                                </td>
                                <td>
                                    @(item.FechaHora.HasValue
                                        ? item.FechaHora.Value.ToString("dd/MM/yyyy HH:mm:ss")
                                        : "—")
                                </td>
                            </tr>
                            posicion++;
                        }
                    </tbody>
                </table>
            </div>
        }
    </div>

    <div class="card-footer bg-body small text-muted">
        Orden cronológico descendente (más reciente primero).
    </div>
</div>
