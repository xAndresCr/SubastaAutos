@model IEnumerable<SubastaAutos.Application.DTOs.SubastaDTO>

@{
    ViewData["Title"] = "Subastas Finalizadas";
    var total = Model?.Count() ?? 0;
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <div>
        <h1 class="h3 mb-1">Subastas Finalizadas</h1>
        <p class="text-muted mb-0">
            Subastas cerradas o canceladas. Total: <strong>@total</strong>
        </p>
    </div>
</div>

@if (Model == null || !Model.Any())
{
    <div class="alert alert-info">
        No hay subastas finalizadas.
    </div>
}
else
{
    <div class="row row-cols-1 row-cols-sm-2 row-cols-lg-3 row-cols-xl-4 g-4">
        @foreach (var item in Model)
        {
            <div class="col">
                <article class="card h-100 shadow-sm border-0">

                    <div class="overflow-hidden bg-body-tertiary rounded-top"
                         style="height:200px;">
                        @if (!string.IsNullOrWhiteSpace(item.ImagenPrincipalAuto))
                        {
                            <img class="w-100 h-100 object-fit-cover"
                                 src="@item.ImagenPrincipalAuto"
                                 alt="@item.NombreAuto"
                                 loading="lazy" />
                        }
                        else
                        {
                            <div class="d-flex flex-column justify-content-center
                                        align-items-center h-100 text-muted">
                                <i class="bi bi-car-front fs-1"></i>
                                <span class="small">Sin imagen</span>
                            </div>
                        }
                    </div>

                    <div class="card-body">
                        <h2 class="h6 fw-semibold mb-2 text-truncate"
                            title="@item.NombreAuto">
                            @item.NombreAuto
                        </h2>

                        <p class="fw-bold text-muted mb-2">
                            @item.PrecioBase.ToString("C", new System.Globalization.CultureInfo("es-CR"))
                        </p>

                        <div class="d-flex flex-wrap gap-1 mb-2">
                            @* ── Badge dinámico según estado ──────────── *@
                            @if (item.EstadoSubasta == "Finalizada")
                            {
                                <span class="badge text-bg-secondary">
                                    <i class="bi bi-check-circle me-1"></i>Finalizada
                                </span>
                            }
                            else
                            {
                                <span class="badge text-bg-danger">
                                    <i class="bi bi-x-circle me-1"></i>Cancelada
                                </span>
                            }

                            <span class="badge text-bg-warning">
                                <i class="bi bi-hammer me-1"></i>@item.CantidadPujas pujas
                            </span>
                        </div>

                        <small class="text-muted d-block">
                            <i class="bi bi-calendar-check me-1"></i>
                            Cerró: @item.FechaCierre.ToString("dd/MM/yyyy HH:mm")
                        </small>
                    </div>

                    <div class="card-footer bg-body border-0 pb-3">
                        <div class="d-grid">
                            <a asp-action="Details" asp-route-id="@item.IdSubasta"
                               class="btn btn-outline-secondary btn-sm">
                                <i class="bi bi-eye me-1"></i>Ver detalle
                            </a>
                        </div>
                    </div>

                </article>
            </div>
        }
    </div>
}

@section Scripts {
    <style>
        .card:hover { transform: translateY(-3px); transition: transform .18s ease; }
    </style>
}
